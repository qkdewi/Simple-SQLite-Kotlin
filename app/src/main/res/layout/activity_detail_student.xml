<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        tools:context=".DetailStudentActivity">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Detail Siswa"
              android:textSize="18sp"
              android:layout_gravity="center_horizontal"/>

    <ImageView
            android:id="@+id/dsa_iv_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/placeholder_user"/>

    <!--Nama-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="Nama"
                  android:textSize="14sp"/>

        <TextView
                android:id="@+id/dsa_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Nama Siswanya siapa"/>

    </LinearLayout>

    <!--Usia-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="Usia"
                  android:textSize="14sp"/>

        <TextView
                android:id="@+id/dsa_tv_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Usia Siswanya berapa"/>

    </LinearLayout>

    <!--Alamat-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="Alamat"
                  android:textSize="14sp"/>

        <TextView
                android:id="@+id/dsa_tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                tools:text="Alamat siswanya mana"/>

    </LinearLayout>

    <!--Jurusan-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <TextView android:layout_width="100dp"
                  android:layout_height="wrap_content"
                  android:text="Jurusan"
                  android:textSize="14sp"/>

        <TextView
                android:id="@+id/dsa_tv_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Jurusan yang dipilih apa"/>

    </LinearLayout>

</LinearLayout>